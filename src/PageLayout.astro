---
import Layout from './Layout.astro'

interface Props {
  title?: string
  description?: string
  ogImage?: string
  frontmatter?: {
    title: string
  }
}

const { title, description, ogImage, frontmatter } = Astro.props
---

<Layout title={frontmatter?.title ?? title} {description} {ogImage}>
  <article class='prose lg:prose-lg dark:prose-invert'>
    <slot />
  </article>
</Layout>
